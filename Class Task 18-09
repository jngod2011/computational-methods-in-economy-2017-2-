%secante

xanterior=1;
xatual=2;
erro=1;
i=1;

while abs(erro)>10^-9
    i=i+1;
    funcao_def=xanterior^3-2*xanterior^2+2*xanterior-5; 
    funcao_atual=xatual^3-2*xatual^2+2*xatual-5;
    temp=xatual;
    xatual=(xanterior*funcao_atual-xatual*funcao_def)/(funcao_atual-funcao_def);
    xanterior=temp;
    erro=xatual-xanterior;
end

xatual

%newton rapson com multiplicidade


x=1;
x(1)=1;
x(2)=2;
erro=1;
i=0;

while abs(erro)>10^-5
    i=i+1;
    funcao=x(i)^8-x(i)^2-3; 
    derivadaprimeira=8*x(i)^7-2*x(i);
    derivadasegunda=56*x(i)^6-2;
    x(i+1)=x(i)-((funcao/derivadaprimeira)/(1-derivadasegunda/derivadaprimeira));
    erro=x(i+1)-x(i);
end



tentativas=100;
solucoes=randi([-20,20],1,tentativas);
xanterior=1;
xatual=-1;
erro=1;


for i=1:tentativas
    xanterior=solucoes(i);
    xatual=solucoes(i)-1;
    erro=1;
    while abs(erro)>10^-10
        funcao_def=xanterior^3-2*xanterior^2+2*xanterior-5; 
        funcao_atual=xatual^3-2*xatual^2+2*xatual-5;
        temp=xatual;
        xatual=(xanterior*funcao_atual-xatual*funcao_def)/(funcao_atual-funcao_def);
        xanterior=temp;
        erro=xatual-xanterior;
    end
    solucoes(i)=xatual;
end
solucoes


%cÃ³digo biage corrigido


N=5;
for i=1:N
 x0= randi([-50 50],1,1);
 j=0;
 x(1,1)=x0;
 ERRO=5.4;
 while(ERRO>0.000001 && j~=1000)
    f=x0^8-x0^2-3;
    Df=8*x0^7-2*x0;
    diff=double(f/Df);
    j=j+1;
    x(j,1+(i-1)*1)=x0;
    x1=x0-diff;
    ERRO=abs(x1-x0);
    x0=x1;
 end
 j=1;
 xR(1,i)=x0;
end
xR
plot(x)
